  	console.log(set_location);
  	var user_lat = set_location.latitude;
  	var user_lng = set_location.longitude;

    var mapDiv = document.getElementById('map');
    var map = new google.maps.Map(mapDiv, {
        center: {lat: user_lat, lng: user_lng},
		    scrollwheel: false,
