<%= form_for @invite do |f| %>
	<div class="field">
		<%= f.label :recipient, "Recipient email" %>
		<%= f.text_field :recipient %>
	</div>

	<div class="field">
		<%= f.label :message %>
		<%= f.text_area :message %>		
	</div>

	<div class="field">
		<%= f.hidden_field :id, :value => @invite_id %>
		<%= f.submit class: 'button' %>
	</div>
<% end %>